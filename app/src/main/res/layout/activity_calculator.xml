<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/calc_ac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="AC"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_7"
            app:layout_constraintEnd_toStartOf="@+id/calc_brackets"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <Button
            android:id="@+id/calc_brackets"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="()"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_8"
            app:layout_constraintEnd_toStartOf="@+id/calc_percent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_ac"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <Button
            android:id="@+id/calc_percent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="%"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_9"
            app:layout_constraintEnd_toStartOf="@+id/calc_slash"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_brackets"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <Button
            android:id="@+id/calc_slash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_asterisk"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_percent"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <Button
            android:id="@+id/calc_asterisk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="*"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_minus"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_9"
            app:layout_constraintTop_toBottomOf="@+id/calc_slash" />

        <Button
            android:id="@+id/calc_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_plus"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_6"
            app:layout_constraintTop_toBottomOf="@+id/calc_asterisk" />

        <Button
            android:id="@+id/calc_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_0"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_3"
            app:layout_constraintTop_toBottomOf="@+id/calc_minus" />

        <Button
            android:id="@+id/calc_equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="="
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toBottomOf="@+id/calc_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_piriod"
            app:layout_constraintTop_toTopOf="@+id/calc_0" />

        <Button
            android:id="@+id/calc_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_0"
            app:layout_constraintEnd_toStartOf="@+id/calc_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_1"
            app:layout_constraintTop_toBottomOf="@+id/calc_5" />

        <Button
            android:id="@+id/calc_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_6"
            app:layout_constraintEnd_toStartOf="@+id/calc_asterisk"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_8"
            app:layout_constraintTop_toBottomOf="@+id/calc_percent" />

        <Button
            android:id="@+id/calc_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_1"
            app:layout_constraintEnd_toStartOf="@+id/calc_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/calc_7" />

        <Button
            android:id="@+id/calc_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_0"
            app:layout_constraintEnd_toStartOf="@+id/calc_plus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_2"
            app:layout_constraintTop_toBottomOf="@+id/calc_6" />

        <Button
            android:id="@+id/calc_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_2"
            app:layout_constraintEnd_toStartOf="@+id/calc_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_4"
            app:layout_constraintTop_toBottomOf="@+id/calc_8" />

        <Button
            android:id="@+id/calc_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_5"
            app:layout_constraintEnd_toStartOf="@+id/calc_9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_7"
            app:layout_constraintTop_toBottomOf="@+id/calc_brackets" />

        <Button
            android:id="@+id/calc_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_4"
            app:layout_constraintEnd_toStartOf="@+id/calc_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/calc_ac" />

        <Button
            android:id="@+id/calc_piriod"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toBottomOf="@+id/calc_0"
            app:layout_constraintEnd_toStartOf="@+id/calc_equal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_0"
            app:layout_constraintTop_toTopOf="@+id/calc_0" />

        <Button
            android:id="@+id/calc_0"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:text="0"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/calc_piriod"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/calc_1" />

        <Button
            android:id="@+id/calc_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_3"
            app:layout_constraintEnd_toStartOf="@+id/calc_minus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/calc_5"
            app:layout_constraintTop_toBottomOf="@+id/calc_9" />

        <Button
            android:id="@+id/calc_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textSize="25sp"
            app:backgroundTint="#434343"
            app:layout_constraintBottom_toTopOf="@+id/calc_0"
            app:layout_constraintEnd_toStartOf="@+id/calc_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/calc_4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />

        <TextView
            android:id="@+id/calc_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="TextView"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/calc_ac"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <TextView
            android:id="@+id/calc_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/calc_result"
            app:layout_constraintEnd_toStartOf="@+id/guideline5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>